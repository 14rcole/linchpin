#!/bin/bash -xe

# Verify basic provisioning for all supplied providers
# distros.exclude: centos7 fedora28 fedora30
# providers.include: none
# providers.exclude: vmware docker gcloud aws openstack

DISTRO=${1}
PROVIDER=${2}

TARGETS="${PROVIDER}-new"
TEST_NAME="${DISTRO}/${PROVIDER}/01_general"
DESCRIPTION="Test ${PROVIDER} provider with a simple up/destroy"
TEMPLATE_DATA="{\"distro\": \"${DISTRO}-\"}"

echo "Test Name: ${TEST_NAME}"
echo "${DESCRIPTION}"



if [ "${PROVIDER}" == "libvirt" ]; then
    TARGETS="libvirt-new" #libvirt-network"
elif [ "${PROVIDER}" == "openstack" ]; then
    TARGETS="os-server-new os-sg-new" #os-vol-new 
    echo "cleaning up old openstack providers"
    sh config/Dockerfiles/cleanup-openstack.sh
elif [ "${PROVIDER}" == "aws" ]; then
    TARGETS="aws-ec2-new" #aws-sg-new aws-s3-new aws-ec2-key-new
elif [ "${PROVIDER}" == "beaker" ]; then
    TARGETS="beaker-new"
elif [ "${PROVIDER}" == "duffy" ]; then
    TARGETS="duffy-new"
elif [ "${PROVIDER}" == "openshift" ]; then
    TARGETS="openshift-new"
elif [ "${PROVIDER}" == "vmware" ]; then
    TARGETS="vmware-new"
else
    TARGETS="dummy-new"
fi

ROOT="docs/source/examples/workspaces/${PROVIDER}"

function clean_up {
    set +e
    D_RC=0
    for target in ${TARGETS}; do
        linchpin -w ${PROVIDER} -v destroy ${target}
        D_RC=(${?} -o ${D_RC})
    done
    rm -rf ${PROVIDER}
    if [ ${D_RC} -ne 0 ]; then
        exit ${D_RC}
    fi
}
trap clean_up EXIT SIGHUP SIGINT SIGTERM

echo "CREDS_PATH: ${CREDS_PATH}"
for target in ${TARGETS}; do
    which git
    linchpin -w . fetch --root ${ROOT} --dest . --branch ${ghprbSourceBranch} https://github.com/${ghprbPullAuthorLogin}/linchpin
    linchpin -w ${PROVIDER} --template-data "${TEMPLATE_DATA}"  -vvvv up ${target}
done
